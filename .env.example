# Server Configuration
PORT=3000
NODE_ENV=development

# API Security (Optional - if not set, API runs without authentication)
# Generate a secure token: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_TOKEN=your_secure_token_here

# AI Provider API Keys
CEREBRAS_API_KEY=your_cerebras_api_key_here
GROQ_API_KEY=your_groq_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Provider Configuration
# Comma-separated list of enabled providers (cerebras,groq,openrouter)
ENABLED_PROVIDERS=cerebras,groq,openrouter

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
